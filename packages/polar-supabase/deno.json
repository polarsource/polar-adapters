{
	"tasks": {
		"test": "deno test --allow-env --allow-net",
		"test:watch": "deno test --allow-env --allow-net --watch",
		"test:coverage": "deno test --allow-env --allow-net --coverage=coverage",
		"build": "deno task build:npm",
		"build:npm": "deno run -A npm:tsup ./src/index.ts --format esm,cjs --dts --clean --sourcemap"
	},
	"imports": {
		"@std/assert": "jsr:@std/assert@^1",
		"@std/testing": "jsr:@std/testing@^1"
	},
	"exclude": [
		"node_modules",
		"dist",
		"example"
	]
}
