{
	"name": "@polar-sh/nextjs",
	"version": "0.2.1",
	"main": "dist/index.js",
	"module": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsup ./src/index.ts --format esm --dts",
		"dev": "tsc --watch",
		"check": "biome check --write ./src"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"@polar-sh/sdk": "^0.20.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@sindresorhus/tsconfig": "^7.0.0",
		"tsup": "^8.3.5"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"peerDependencies": {
		"next": "^15.0.0"
	}
}
