{
	"name": "@polar-sh/express",
	"version": "0.4.0",
	"description": "Polar integration for Express",
	"main": "./dist/index.cjs",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		"import": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"require": {
			"types": "./dist/index.d.cts",
			"require": "./dist/index.cjs"
		}
	},
	"engines": {
		"node": ">=16"
	},
	"type": "module",
	"scripts": {
		"test": "vitest",
		"build": "tsup ./src/index.ts --format esm,cjs --dts --clean --sourcemap",
		"dev": "tsc --watch",
		"check": "biome check --write ./src"
	},
	"files": [
		"dist"
	],
	"keywords": [
		"polar",
		"express",
		"payments",
		"subscriptions"
	],
	"peerDependencies": {
		"express": "^4.21.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@sindresorhus/tsconfig": "^7.0.0",
		"@types/express": "^5.0.3",
		"@types/node": "^20.0.0",
		"@types/supertest": "^6.0.3",
		"express": "^4.21.2",
		"prettier": "^3.6.2",
		"supertest": "^7.1.4",
		"tsup": "^8.5.0",
		"vitest": "^2.1.8"
	},
	"dependencies": {
		"@polar-sh/adapter-utils": "workspace:*",
		"@polar-sh/sdk": "^0.40.2"
	}
}
